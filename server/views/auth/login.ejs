<%- include ../partials/header.ejs %> 
<%- include ../partials/main_nav.ejs %>

<br><br>
<head> <link rel='stylesheet' href='/Content/login.css' /> </head>
<br>
 <div id="loginPage">

  <br><h1>
  <img src="../../Assets/images/team_logo2.png" height="100" width="110px" style="float:left; margin-left: 0.95in; margin-right: 0.25in; margin-top: 0.15in;"/>
  <br> &nbsp; &nbsp; Please Login</h1>
<br>

<main class="container">
  <!-- Message Area -->
  <% if(messages.length > 0) {%>
  <div class="alert alert-danger"><%= messages %></div>
  <% } %>

  <div class="row">
    <div class="offset-md-4 col-md-4">

      <form method="POST" autocomplete="off">
        <fieldset class="form-group">
          <label for="username">Username: </label>
          <input
            type="text"
            class="form-control"
            name="username"
            placeholder="Enter username"
            id="username"
            required
            autofocus
          />
        </fieldset>

        <fieldset class="form-group">
          <label for="password">Password: </label>
          <input
            type="password"
            class="form-control"
            name="password"
            placeholder="Enter password"
            id="password"
            required
          />
          or
          <a href="/register">Register Here</a>
        </fieldset>

        <fieldset class="form-group text-right">
          <input type="submit" class="btn btn-success" value="Login" style="background-color:blue; color:white"/>
          <a href="/">
            <input type="button" class="btn btn-warning" value="Cancel" style="background-color:red; color:white" />
          </a>
        </fieldset>
      </form>
    </div>
  </div>
</main>

